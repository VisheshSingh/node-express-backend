extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            each prod in prods
                .grid
                    article.card.product-item
                        header.card-header
                            h1.product__title #{prod.title}
                        .card__image
                            img(src="https://cdn.clipart.email/ea8619ae7bd5eeecaa66601f58603ce1_best-open-book-illustrations-royalty-free-vector-graphics-clip-_612-612.jpeg", alt="book cover")
                        .card__content
                            h2.product__price $19.99
                            p.description A very interesting book about so many awesome things and even more
                        .card__actions
                            button.btn Add Product
        else
            h1 No Products